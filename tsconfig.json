{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2019",
    "strict": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "jsx": "react-jsx",
        "paths": {
            "@/gql": [
                "./src/gql/graphql.ts"
            ],
            "@/vdb/*": [
                "./node_modules/@vendure/dashboard/src/lib/*"
            ]
        }
  },
  "include": [
  "src/**/*.ts",
  "src/**/*.tsx"
  ],
  "exclude": [
    "src/plugins/**/ui/*",
    "node_modules",
    "migration.ts",
    "admin-ui",
    "vite.*.*ts"
  ],
  "ts-node": {
    "files": true
  }
}
